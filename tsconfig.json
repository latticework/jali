{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "lib": ["es2017"],
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist/all/",
    "paths": {
      "@jali/*": ["./packages/@jali/*"]
    },
    "rootDir": ".",
    "strictNullChecks": true,
    "stripInternal": true,
    "target": "es6",
    "typeRoots": ["./node_modules/@types/node"],
    "types": ["node"]
  },
  "files": [
    "./typings/index.d.ts"
  ]
}


